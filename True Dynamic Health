<script>
const steps=['q1','q2','q3','q4','q5','q6'];let stepIndex=0;let pref={kind:null,country:null,age:null,gender:null,relationship:null,topic:null,time:null};
function nav(id){document.querySelectorAll('.section').forEach(s=>s.classList.remove('active'));document.getElementById(id).classList.add('active');window.scrollTo(0,0)}
function info(t,b){document.getElementById('it').textContent=t;document.getElementById('ib').textContent=b;document.getElementById('im').classList.add('show')}
function closeInfo(){document.getElementById('im').classList.remove('show')}
function open247(){document.getElementById('sos').classList.add('show')}
function close247(){document.getElementById('sos').classList.remove('show')}
function renderPills(){const p=document.getElementById('pills');if(!p)return;p.innerHTML='';steps.forEach((_,i)=>{const d=document.createElement('div');d.className='pill'+(i<=stepIndex?' on':'');p.appendChild(d)})}
function showStep(i){steps.forEach((id,j)=>{document.getElementById(id).style.display=(i===j)?'block':'none'});stepIndex=i;renderPills()}
function nextStep(){if(stepIndex===0)pref.country=document.getElementById('country').value||pref.country;if(stepIndex===1)pref.age=document.getElementById('age').value||pref.age;if(stepIndex===4)pref.topic=document.getElementById('topic').value||pref.topic;if(stepIndex===5)pref.time=document.getElementById('time').value||pref.time;if(stepIndex<steps.length-1)showStep(stepIndex+1);else finishQuiz()}
function setAndNext(k,v){pref[k]=v;nextStep()}function demoSkip(){nextStep()}
function finishQuiz(){const lines=[];if(pref.kind)lines.push('Focus: '+pref.kind);if(pref.topic)lines.push('Goal: '+pref.topic);if(pref.age)lines.push('Age: '+pref.age);if(pref.time)lines.push('Prefers: '+pref.time);document.getElementById('prefSummary').textContent=lines.length?('Matched by: '+lines.join(' ‚Ä¢ ')):'We‚Äôll confirm and message you within 48 hours.';const isTeen=(pref.kind==='teen')||(pref.age==='13‚Äì17');const wantsCouples=(pref.kind==='couples')||(pref.topic==='Relationships');const wantsMAT=(pref.topic&&pref.topic.indexOf('MAT')>-1);const grid=document.getElementById('provGrid');[...grid.children].forEach(card=>{const roles=(card.getAttribute('data-roles')||'').split(' ');let ok=true;if(isTeen&&!roles.includes('teen'))ok=false;if(wantsCouples&&!roles.includes('couples'))ok=false;if(wantsMAT&&!roles.includes('mat'))ok=false;card.style.display=ok?'flex':'none'});nav('providers')}
renderPills();showStep(0);function schedule(name){document.getElementById('sosNm').textContent=name;open247()}
</script>
